{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Advents",
  "description": "Advents é uma alternativa à AppsFlyer e ao Firebase Dynamic Links. Impulsione suas campanhas de instalação com a evolução da atribuição mobile.",

  "colors": {
    "primary": "#0E0E0E",
    "light": "#D3D3D3",
    "dark": "#0E0E0E"
  },
  "logo": {
    "light": "/assets/brand/light.svg",
    "dark": "/assets/brand/dark.svg"
  },
  "favicon": "/assets/favicon.svg",
  "styling": {
    "codeblocks": "dark",
    "eyebrows": "section"
  },
  "appearance": {
    "default": "light"
  },
  "background": {},

  "navbar": {
    "links": [
      {
        "label": "Cadastrar",
        "href": "https://l.advents.io/cadastro"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Entrar",
      "href": "https://app.advents.io"
    }
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Experimente de graça",
          "href": "https://l.advents.io/cadastro",
          "icon": "user"
        }
      ]
    },
    "languages": [
      {
        "language": "pt-BR",
        "default": true,
        "tabs": [
          {
            "tab": "Documentação",
            "groups": [
              {
                "group": " ",
                "pages": ["introduction", "api-key", "ios-preview-page"]
              },
              {
                "group": "SDKs",
                "pages": [
                  {
                    "group": "React Native",
                    "icon": "react",
                    "pages": ["sdks/react-native/introduction", "sdks/react-native/events"]
                  }
                ]
              }
            ]
          },
          {
            "tab": "Suporte",
            "groups": [
              {
                "group": " ",
                "pages": ["support/contact-us"]
              }
            ]
          },
          {
            "tab": "Demonstração",
            "groups": [
              {
                "group": " ",
                "pages": ["demo/demo"]
              }
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "website": "https://advents.io",
      "github": "https://github.com/advents-io",
      "linkedin": "https://www.linkedin.com/company/advents-io",
