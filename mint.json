{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Advents",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#0e0e0e",
    "light": "#fff",
    "dark": "#0e0e0e",
    "anchors": {
      "from": "#0e0e0e",
      "to": "#fff"
    }
  },
  "theme": "prism",
  "layout": "topnav",
  "background": {
    "style": "grid"
  },
  "modeToggle": {
    "default": "light"
  },
  "sidebar": {
    "items": "container"
  },
  "topbar": {
    "style": "default"
  },
  "search": {
    "location": "top",
    "prompt": "Procurar..."
  },
  "rounded": "default",
  "topbarLinks": [
    {
      "name": "Suporte",
      "url": "mailto:contato@advents.io"
    }
  ],
  "topbarCtaButton": {
    "name": "Entrar",
    "url": "https://app.advents.io",
    "style": "roundedRectangle",
    "arrow": true
  },
  "footerSocials": {
    "website": "https://advents.io",
    "linkedin": "https://www.linkedin.com/company/advents-io",
    "github": "https://github.com/advents-io"
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": false,
    "thumbsRating": false
  },
  "topAnchor": {
    "name": "Documentação"
  },
  "anchors": [
    {
      "name": "Fale Conosco",
      "icon": "envelope",
      "url": "mailto:contato@advents.io"
    }
  ],
  "navigation": [
    {
      "group": "Introdução",
      "pages": ["introduction", "quickstart", "development"]
    },
    {
      "group": "Fundamentos",
      "pages": [
        "essentials/markdown",
        "essentials/code",
        "essentials/images",
        "essentials/settings",
        "essentials/navigation",
        "essentials/reusable-snippets"
      ]
    }
  ]
}
